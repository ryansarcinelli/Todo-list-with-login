<% content_for :title, "New task" %>

<h1>New task</h1>

<%= simple_form_for(@task) do |f| %>
  <div class="mb-3">
    <%= f.input :title, label: "Task Title", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :body, label: "Task Description", as: :text, input_html: { class: "form-control", rows: 4 } %>
  </div>

  <div class="mb-3 form-check">
    <%= f.input :completed, as: :boolean, label: "Completed?", input_html: { class: "form-check-input" } %>
  </div>

  <div class="mt-3">
    <%= f.submit "Create Task", class: "btn btn-success btn-lg w-10" %>
  </div>
<% end %>
