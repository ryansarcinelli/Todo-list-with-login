<div id="<%= dom_id task %>">
  <div class="card p-3">
    <h5 class="card-title"><%= task.title %></h5>
    <p class="card-text"><%= task.body %></p>

    <%= simple_form_for(task, html: { class: "d-inline-block" }) do |f| %>
      <%= f.input :completed, as: :boolean, label: "Completed?" %>
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>

    <div class="d-flex gap-2 mt-2">
      <%= button_to "Deletar", task_path(task), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this task?" } %>
      <%= link_to "Editar", edit_task_path(task), class: "btn btn-primary" %>
    </div>
  </div>
</div>
